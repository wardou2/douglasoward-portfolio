{
    "extends": [
        "airbnb-base",
        "react-app",
        "plugin:prettier/recommended",
        "eslint-config-prettier"
    ],
    "env": {
        "browser": true
    },
    "settings": {
        "import/extensions": [".js", ".jsx"]
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "prefer-destructuring": "off",
        "no-param-reassign": "warn"
    }
}
